---
// Same customLinks array
const customLinks = [
  { name: 'Mercari', url: 'https://www.mercari.com/u/effort/', icon: 'cart' },
  { name: 'Solo.to', url: 'https://solo.to/dmt/', icon: 'music' },
  { name: 'eBay', url: 'https://www.ebay.com/usr/decipher', icon: 'store' },
  { name: 'Instagram', url: 'https://www.instagram.com/fnaw', icon: 'instagram' },
];
---

<div class="screen-center">
  <div class="links-container">
    {customLinks.map(link => (
      <a href={link.url} target="_blank" rel="noopener noreferrer" class="link-btn" aria-label={`Visit ${link.name}`}>
        <iconify-icon icon={`mdi:${link.icon}`} class="btn-icon"></iconify-icon>
        <span>{link.name}</span>
      </a>
    ))}
  </div>
</div>

<style>
  .screen-center {
    display: flex;
    justify-content: center; /* Horizontal center */
    align-items: center; /* Vertical center */
    min-height: 100vh; /* Full screen height */
    padding: 2rem 1rem;
    background: #f8f9fa; /* Light theme */
  }
  .links-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    max-width: 400px; /* Prevent over-wide on desktop */
  }
  .link-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.75rem;
    min-height: 60px;
    background: #f8f9fa;
    color: #333;
    text-decoration: none;
    border-radius: 12px;
    border: 2px solid #e0e0e0;
    font-size: 1.1rem;
    font-weight: 600;
    transition: all 0.2s ease;
    white-space: nowrap;
  }
  .link-btn:hover,
  .link-btn:focus {
    background: #007bff;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0,123,255,0.4);
  }
  .btn-icon {
    font-size: 1.5rem;
    width: 1.5em;
    height: 1.5em;
  }
  @media (max-width: 640px) {
    .links-container {
      flex-direction: column;
      gap: 0.75rem;
    }
    .link-btn {
      width: 100%;
      max-width: 320px;
      justify-content: center;
      font-size: 1.2rem;
    }
  }
</style>

