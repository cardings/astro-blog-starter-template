---
// Define your custom links here as an array of objects
const customLinks = [
  { name: 'Mercari', url: 'https://www.mercari.com/u/effort/', icon: 'Mercari' },
  { name: 'Solo.to', url: 'https://solo.to/dmt/', icon: 'Solo.to' },
  { name: 'eBay', url: 'https://www.ebay.com/usr/decipher', icon: 'Ebay' },
  { name: 'Instagram', url: 'https://www.instagram.com/fnaw', icon: 'Instagram' },
  // Add more as needed
];
---

<ul class="links-list">
  {customLinks.map(link => (
    <li>
      <a href={link.url} target="_blank" rel="noopener noreferrer">
        <!-- Use Iconify for icons; add script to your layout head if needed -->
        <iconify-icon icon={`mdi:${link.icon}`}></iconify-icon>
        {link.name}
      </a>
    </li>
  ))}
</ul>

<style>
  .links-list {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
  }
  .links-list a {
    color: #333;
    text-decoration: none;
  }
</style>
